<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tvLoadType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Load_Type"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rbFullLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/full_truck_load"
                    android:theme="@style/MyRaidoButton" />


                <RadioButton
                    android:id="@+id/rbPartLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/part_truck_load"
                    android:theme="@style/MyRaidoButton" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="@string/scheduling_type"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rbOneTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/one_time"
                    android:theme="@style/MyRaidoButton" />

                <RadioButton
                    android:id="@+id/rbDaily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daily"
                    android:theme="@style/MyRaidoButton" />


                <RadioButton
                    android:id="@+id/rbWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/weekly"
                    android:theme="@style/MyRaidoButton" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/Source_city"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/etSourceCity"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:focusable="false"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/destination_city"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/etDestinationCity"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:focusable="false"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/Materialtype"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etMaterialtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/down_arrow"
                android:editable="false"
                android:focusable="false"
                android:maxLength="50"
                android:maxLines="1"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinnerMaterialtype"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="start"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:gravity="start"
                android:paddingStart="40dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/weight"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/down_arrow"
                android:editable="false"
                android:focusable="false"
                android:lines="1"
                android:maxLength="50"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinnerWeight"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="start"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:gravity="start"
                android:paddingStart="40dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/truck_type"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etTruckType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/down_arrow"
                android:editable="false"
                android:focusable="false"
                android:lines="1"
                android:maxLength="50"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinnerTruckType"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="start"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:gravity="start"
                android:paddingStart="40dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/date_of_load"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etDateOfLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/destination"
                android:editable="false"
                android:focusable="false"
                android:lines="1"
                android:maxLength="50"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/no_of_trucks"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etNoOfTruck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/down_arrow"
                android:editable="false"
                android:focusable="false"
                android:lines="1"
                android:maxLength="50"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinnerNoOfTruck"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="start"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:gravity="start"
                android:paddingStart="40dp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button"
                android:minWidth="120dp"
                android:text="@string/submit"
                android:textColor="@color/color_selector"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

