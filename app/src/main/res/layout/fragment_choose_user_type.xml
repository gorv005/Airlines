<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.truck.airlines.airlines.fragments.FragmentUserType">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/select_user_type"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnTransporter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="@string/transporter"
            android:textColor="@color/colorwhite"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnDrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_button"
            android:text="@string/driver"
            android:textColor="@color/colorwhite"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_button"
            android:text="@string/customer"
            android:textColor="@color/colorwhite"
            android:textSize="20dp" />
        <LinearLayout
            android:weightSum="3"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <View
            android:layout_weight="1.2"
            android:background="@color/grey_dark"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="1dp"/>
            <TextView
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
               android:layout_gravity="center_vertical"
                android:text="@string/or"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
            <View
                android:layout_gravity="center_vertical"
                android:layout_weight="1.2"
                android:background="@color/grey_dark"
                android:layout_width="0dp"
                android:layout_height="1dp"/>


        </LinearLayout>
        <Button
            android:id="@+id/btnOfflineLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_button"
            android:text="@string/offline"
            android:textColor="@color/colorwhite"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>
